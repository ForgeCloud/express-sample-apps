{{> logo}}
<h2 class="text-center">Recover Password</h2>

<form method="post" action="/custom/recover-password">
  <div class="form-group">
    <label for="form-email">Username</label>
    <input
      class="form-control"
      id="form-username"
      name="username"
      pattern=".{1,}"
      placeholder=""
      required
      type="text"
      value="{{username}}"
    />
  </div>
  <div class="form-group">
    <label for="form-email">Email Address</label>
    <input
      class="form-control"
      id="form-email"
      name="email"
      pattern=".{1,}"
      placeholder=""
      required
      type="text"
      value="{{email}}"
    />
  </div>
  {{#if resp.success}}
  <div class="alert alert-success" role="alert">
    Recover password email sent!
  </div>
  {{/if}}
  <button class="btn btn-primary w-100 my-2" type="submit">
    Recover Password
  </button>
  <footer class="mt-2">
    <ul class="nav justify-content-center">
      <li class="nav-item">
        <a class="nav-link" href="/custom/signin"
          >Already have an account? Sign in</a
        >
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/custom/recover-username">Forgot Username</a>
      </li>
    </ul>
  </footer>
</form>
